<h1>New book</h1>

<% if @book.errors.any? %>
  <%= @book.errors.count %>errors prohibited this book form being saved:
  <ul>
    <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>

<%= form_with model: @book, url: '/books', method: :post do |f| %>
  
  
  <h4>Title</h4>
  <%= f.text_field :title %>
  
  
  <h4>Body</h4>
  <%= f.text_area :body %>
  
  
  <%= f.submit 'Create Book'%>

<% end %>



<h1>Books</h1>

<% @books.each do |book| %>

  <div>
    <%= flash[:destroy] %>
  </div>
  
  <p>Title</p>
  <span>
    <%= book.title %>
  </span>
  
  <p>Body</p>
  <span>
    <%= book.body %>
  </span>
  
<%= link_to 'Show', book_path(book.id) %>
<%= link_to 'edit', edit_book_path(book.id) %>
<%= form_with url: book_path(book.id), method: :delete, "data-confirm" => "Are you sure?" do |f| %>
  <%= f.submit 'Destroy' %>
<% end %>

<% end %>

